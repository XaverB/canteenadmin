<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    style="@style/Widget.Material3.CardView.Filled">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginVertical="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/tvRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="asdasdasd asda sdas das dasd asd asd asd a sd sa dasd asd sa dasd asd sa dasd asd sa dasd asd sa dasd asd sa dasd asd sa dasd asd asd asd as das das dasd sasd "
            style="@style/TextAppearance.Material3.LabelMedium"
            />



        <RatingBar
            android:id="@+id/rtbAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:isIndicator="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvRemark"
            android:layout_marginVertical="@dimen/activity_vertical_margin"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />

        <TextView
            android:id="@+id/tvAuthorDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/rtbAverageRating"
            app:layout_constraintTop_toTopOf="@id/rtbAverageRating"
            style="@style/TextAppearance.Material3.LabelSmall"
            tools:text="Campina"
            />

        <TextView
            android:id="@+id/txvAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/rtbAverageRating"
            app:layout_constraintStart_toEndOf="@id/rtbAverageRating"
            app:layout_constraintTop_toTopOf="@id/rtbAverageRating"
            style="@style/TextAppearance.Material3.LabelSmall"
            tools:text="4.5"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>